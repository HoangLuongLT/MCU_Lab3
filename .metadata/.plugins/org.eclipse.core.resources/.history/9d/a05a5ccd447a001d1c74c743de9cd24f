#include "fsm_manual.h"
#include "global.h"
#include "output_display.h"
#include "software_timer.h"
#include "button.h"

int increase = 0;

void fsm_manual_processing(){
	switch (status) {
		case MAN_RED:
			//button 1
			if(isButtonPress(0)){
				setTimer1(5000);
				status = MAN_GREEN;
				timer0_flag=1;
			}
			//button 2
			if(isButtonPress(1)){
				setTimer1(5000);
				increase++;
			}
			//button 3
			if(isButtonPress(2)){
				setTimer1(5000);
				redDuration+=increase;
				increase=0;
			}
			//Time out 10s
			if(timer1_flag==1){
				status = AUTO_RED_GREEN;
			}
			//TODO
			if(timer0_flag==1){
				setTimer0(500);
				blinkAllRedLed();
			}
			break;
		case MAN_GREEN:
			//button 1
			if(isButtonPress(0)){
				setTimer1(5000);
				status = MAN_YELLOW;
				timer0_flag=1;
			}
			//button 2
			if(isButtonPress(1)){
				setTimer1(5000);
				increase++;
			}
			//button 3
			if(isButtonPress(2)){
				setTimer1(5000);
				redDuration+=increase;
				increase=0;
			}
			//Time out 10s
			if(timer1_flag==1){
				status = AUTO_RED_GREEN;
			}
			//TODO
			if(timer0_flag==1){
				setTimer0(500);
				blinkAllGreenLed();
			}
			break;
		case MAN_YELLOW:
			//button 1
			if(isButtonPress(0)){
				timer1_flag=1;
				status = AUTO_RED_GREEN;
				timer0_flag=1;
			}
			//button 2
			if(isButtonPress(1)){
				setTimer1(5000);
				increase++;
			}
			//button 3
			if(isButtonPress(2)){
				setTimer1(5000);
				redDuration+=increase;
				increase=0;
			}
			//Time out 10s
			if(timer1_flag==1){
				status = AUTO_RED_GREEN;
			}
			//TODO
			if(timer0_flag==1){
				setTimer0(500);
				blinkAllYellowLed();
			}
			break;
		default:
			break;
	}
}
